<a href="/todos/new">Add new Todo</a>
<a href="/todos">All Todos</a>
<a href="/users/edit">Update user</a>

<% if @todos.size > 0 %>
  <table>
  <tr>
    <th>Title</th>
    <th>Due To</th> 
    <th>Priority</th>
    <th>Status</th>
  </tr>
   <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.title %></td>
      <td><%= todo.due_to %></td>
      <td><%= todo.priority %></td>
      <td><%= todo.status %></td>
    </tr>
  <% end %>
</table>
<% else %>
  <p>Nothing to Do</>
<% end %>