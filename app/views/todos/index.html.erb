<h1>Todos</h1>

<a href="">Add new Todo</a>

<% if @todos.size > 0 %>
  <table>
  <tr>
    <th>Title</th>
    <th>Due To</th> 
    <th>Priority</th>
    <th>Status</th>
  </tr>
   <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.title %></td>
      <td><%= todo.due_to %></td>
      <td><%= todo.priority %></td>
      <td><%= todo.status %></td>
      <td>
      <form action="/todos/edit/<%= todo.id %>" method="POST">
        <button type="submit">Edit</button>
      </form>
      </td>
      <td>
      <form action="/todos/delte/<%= todo.id %>" method="POST">
        <button type="submit">Delete</button>
      </form>
      </td>
    </tr>
  <% end %>
</table>
<% else %>
  <p>Nothing to Do</>
<% end %>